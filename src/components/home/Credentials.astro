---
import CredentialsCarousel from "@/components/home/CredentialsCarousel";

const credentials = [
    {
        institution: "Universidad Autónoma del Estado de Hidalgo",
        degree: "Médico General",
        logo: "/certificaciones/uaeh.webp",
    },
    {
        institution: "Universidad Veracruzana",
        degree: "Especialidad en Cirugía General",
        logo: "/certificaciones/universidad-veracruzana.webp",
    },
    {
        institution: "Centro Médico Nacional Adolfo Ruiz Cortines",
        degree: "Egresada del Centro de Alta Especialidad",
        logo: "/certificaciones/imss.png",
    },
    {
        institution: "Colegio Mexicano de Cirugía General",
        degree: "Avalada por el CMCG",
        logo: "/certificaciones/cmcg.png",
    },
    {
        institution: "Asociación Mexicana de Cirugía General",
        degree: "Miembro Activo de la AMCG",
        logo: "/certificaciones/amcg.png",
    },
];

interface Props {
    bgColor?: string;
}

const { bgColor = "bg-secondary/5" } = Astro.props;
---

<section id="certificaciones" class={`py-20 px-4 sm:px-6 lg:px-8 ${bgColor}`}>
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
            <p
                class="text-accent font-semibold tracking-widest uppercase text-sm mb-4"
            >
                Trayectoria Profesional
            </p>
            <h2
                class="serif-title text-4xl md:text-5xl font-bold text-foreground"
            >
                Formación y Certificaciones
            </h2>
            <p class="text-muted-foreground text-lg mt-4 max-w-2xl mx-auto">
                Respaldo académico y profesional de instituciones reconocidas
                nacionalmente
            </p>
        </div>

        {/* Hidratamos la isla solo cuando sea visible para ahorrar recursos */}
        <CredentialsCarousel credentials={credentials} client:visible />
    </div>
</section>
