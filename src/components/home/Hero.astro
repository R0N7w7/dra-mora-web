---
import { Button } from "@/components/ui/button";
import { ArrowRight, Contact2Icon } from "lucide-react";
import WhatsAppIcon from "../ui/whatsAppIcon.astro";

/**
 * MIGRACIÓN EXITOSA:
 * Este componente es 100% estático en el cliente.
 * El uso de shadcn/ui (Button) y Lucide Icons se procesa en el servidor.
 */

interface Props {
    bgColor?: string;
}

const {
    bgColor = "bg-gradient-to-br from-primary/5 via-background to-secondary/5",
} = Astro.props;
---

<section class={`pt-32 pb-20 px-4 sm:px-6 lg:px-8 ${bgColor}`}>
    <div
        class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-center"
    >
        <div class="space-y-8">
            <div class="space-y-4">
                <h1
                    class="serif-title text-5xl md:text-6xl font-bold text-foreground leading-tight"
                >
                    Dra. Jessica Itzhel Mora Guzmán
                </h1>
                <div
                    class="inline-block px-4 py-2 border border-accent/80 rounded-full text-accent font-semibold text-sm"
                >
                    Especialista en Cirugía General Gastrointestinal y Laparoscopia
                </div>
                <p class="text-xl text-muted-foreground leading-relaxed">
                    Mi compromiso es brindar una atención profesional, precisa y
                    humana, enfocada en la salud y bienestar de cada paciente,
                    con técnicas actualizadas y procedimientos de mínima
                    invasión.
                </p>
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
                <a
                    href="https://www.doctoralia.com.mx/jessica-itzhel-mora-guzman/medico-general/pachuca-de-soto"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <Button
                        size="lg"
                        className="bg-primary text-primary-foreground gap-2 cursor-pointer w-full sm:w-max"
                    >
                        Reserva tu cita en línea
                        <ArrowRight className="w-4 h-4" />
                    </Button>
                </a>
                <a
                    href="https://api.whatsapp.com/send?phone=5217712916045&text=Hola%2C%20me%20gustar%C3%ADa%20agendar%20una%20cita."
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <Button
                        size="lg"
                        variant="outline"
                        className="border-primary text-primary bg-transparent cursor-pointer hover:border-transparent w-full sm:w-max"
                    >
                        <WhatsAppIcon class="w-4 h-4" /> Hablar por WhatsApp
                    </Button>
                </a>
            </div>
        </div>

        <div class="relative">
            <div
                class="aspect-square bg-gradient-to-br from-primary/10 to-secondary/10 rounded-2xl overflow-hidden"
            >
                <img
                    src="/1.jpg"
                    alt="Dra. Jessica Itzhel Mora Guzmán - Cirujana especialista"
                    class="w-full h-full object-cover"
                    loading="eager"
                />
            </div>
            <div
                class="absolute -bottom-6 -left-6 bg-accent ml-4 sm:ml-0 text-accent-foreground p-6 rounded-lg shadow-lg max-w-xs"
            >
                <p class="font-semibold text-lg">
                    Atención profesional con técnicas de mínima invasión
                </p>
            </div>
        </div>
    </div>
</section>
