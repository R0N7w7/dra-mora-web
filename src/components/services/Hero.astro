---
/**
 * HeroHernia.astro
 * Componente transformado a Astro nativo.
 */
import { Button } from "@/components/ui/button";
import { Phone, Calendar, ArrowRight } from "lucide-react";
import WhatsAppIcon from "../ui/whatsAppIcon.astro";

interface Props {
    title?: string;
    description?: string;
}

const {
    title = "Hernia Inguinal",
    description = "La hernia inguinal se presenta cuando una porción del intestino o tejido interno sobresale por una zona débil en la parte baja del abdomen (ingle). Es más común en hombres y puede aparecer por esfuerzo físico intenso, tos crónica, sobrepeso o debilidad muscular.",
} = Astro.props;
---

<section
    class="pt-32 pb-16 px-4 sm:px-6 lg:px-8 bg-linear-to-br from-primary/5 to-secondary/5"
>
    <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
                <div
                    class="inline-block px-4 py-1 bg-primary/10 rounded-full text-primary font-semibold text-sm mb-4"
                >
                    Cirugía de Hernia
                </div>
                <h1
                    class="serif-title text-4xl md:text-5xl font-bold text-foreground mb-6"
                >
                    {title}
                </h1>
                <p class="text-lg text-muted-foreground leading-relaxed mb-8">
                    {description}
                </p>
                <div class="flex flex-col sm:flex-row gap-4">
                    <a
                        href="https://www.doctoralia.com.mx/jessica-itzhel-mora-guzman/medico-general/pachuca-de-soto"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <Button
                            size="lg"
                            className="bg-primary text-primary-foreground gap-2 cursor-pointer w-full sm:w-max"
                        >
                            Reserva tu cita en línea
                            <ArrowRight className="w-4 h-4" />
                        </Button>
                    </a>
                    <a
                        href="https://api.whatsapp.com/send?phone=5217712916045&text=Hola%2C%20me%20gustar%C3%ADa%20agendar%20una%20cita."
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <Button
                            size="lg"
                            variant="outline"
                            className="border-primary text-primary bg-transparent cursor-pointer hover:border-transparent w-full sm:w-max"
                        >
                            <WhatsAppIcon class="w-4 h-4" /> Hablar por WhatsApp
                        </Button>
                    </a>
                </div>
            </div>
            <div
                class="relative aspect-[4/3] overflow-hidden rounded-2xl shadow-2xl"
            >
                <img
                    src="/1.jpg"
                    alt="Diagrama de hernia inguinal"
                    class="w-full h-full object-cover"
                    loading="eager"
                />
            </div>
        </div>
    </div>
</section>
