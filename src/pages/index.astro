---
import Hero from "@/components/home/Hero.astro";
import Layout from "../layouts/Layout.astro";
import Process from "@/components/home/Process.astro";
import Services from "@/components/home/Services.astro";
import Faq from "@/components/home/Faq.astro";
import Locations from "@/components/home/Locations.astro";
import Credentials from "@/components/home/Credentials.astro";
import CalendarWidget from "@/components/widgets/CalendarWidget.astro";
---

<Layout
	title="Página Principal"
	description="Esta es la página principal de mi sitio web."
>
	<Hero
		bgColor="bg-gradient-to-br from-primary/5 via-background to-secondary/5"
	/>
	<Credentials bgColor="bg-[#f8fafc]" />
	<Services bgColor="bg-white" />
	<Process bgColor="bg-[#f1f5f9]" />
	<Faq bgColor="bg-white" />
	<CalendarWidget bgColor="bg-[#f1f5f9]" />
	<Locations bgColor="bg-white" />
</Layout>
