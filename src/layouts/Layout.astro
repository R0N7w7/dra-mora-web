---
// Import tailwindcss
import "../styles/global.css";

// src/layouts/BaseLayout.astro
import Navbar from "../components/layout/Navbar.astro";
import Footer from "../components/layout/Footer.astro";
import Faq from "@/components/layout/Faq.astro";
import Locations from "@/components/layout/Locations.astro";
import CalendarWidget from "@/components/widgets/CalendarWidget.astro";

// 1. Define las propiedades (props) que el layout acepta
export interface Props {
	title: string; // Título específico para la página
	description?: string; // Descripción meta (opcional)
}

// 2. Desestructura las propiedades
const { title, description = "Descripción por defecto de mi web" } =
	Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta name="description" content={description} />

		<slot name="head" />
	</head>
	<body class="w-full">
		<Navbar />

		<main>
			<slot />
		</main>
		<Faq bgColor="bg-white" />
		<CalendarWidget bgColor="bg-[#f1f5f9]" />
		<Locations bgColor="bg-white" />
		<Footer />
	</body>
</html>
